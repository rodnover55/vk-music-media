.post
  position relative
  padding-bottom 40px
  padding-left 180px
  border-bottom 1px solid rgba(81,174,240,0.1)
  min-height 180px
  &.__collapsed
    height 180px

  &Tags
    position absolute
    bottom 20px
    left 180px
    font-size 12px

  &Play
    @extend .playerButton
    @extend .playerButton.__play
    position absolute
    display none
    top 20px
    left 20px
    width 120px
    height 120px

  &:hover .postPlay
    display block

  &Title
    margin 0 0 20px 0

  &Description
    cursor default
    &.__collapsed
      max-height 100px
      overflow hidden
      cursor pointer

  &Image
    left 0
    top 0
    width 160px
    height 160px
    background-position center
    background-size contain
    background-repeat no-repeat
    position absolute